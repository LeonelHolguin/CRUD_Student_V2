@model CRUDTwoApi.Shared.CareerDTO
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Details</h1>
</div>


<div class="card">
    <div class="card-header">
        Details of Career
    </div>

    <div class="card-body">
        <form asp-action="SaveChanges" asp-controller="Career" method="post">
            <input asp-for="CareerId" type="hidden" />

            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control form-control-sm" asp-for="CareerName" />
                <span asp-validation-for="CareerName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" asp-controller="Career" class="btn btn-secondary">Cancel</a>

        </form>
    </div>
</div>

